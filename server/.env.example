# Multi-tenant Field Service Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Tenant Registry Database (Master database for tenant management)
TENANT_DB_SERVER=localhost
TENANT_DB_NAME=TenantRegistry
TENANT_DB_USER=sa
TENANT_DB_PASSWORD=your_password_here
TENANT_DB_TRUST_CERT=true

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
CONNECTION_STRING_SECRET=your-connection-string-encryption-secret-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# File Storage Configuration
# Leave blank to use local file storage (not persistent in Azure App Service)
# For Azure deployments, configure Azure Blob Storage for persistent file storage
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=attachments

# External Services (for future integration)
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
SENDGRID_API_KEY=your_sendgrid_key_here
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# Feature Flags
ENABLE_AZURE_PROVISIONING=false
ENABLE_STRIPE_BILLING=false
ENABLE_EMAIL_NOTIFICATIONS=false

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_ACCOUNT=your_storage_account

# Monitoring
HEALTH_CHECK_INTERVAL=30000
DATABASE_HEALTH_CHECK_INTERVAL=300000

# Multi-tenant Settings
MAX_TENANTS_PER_SERVER=100
DEFAULT_SUBSCRIPTION_TIER=Starter
DEFAULT_MAX_USERS=10
DEFAULT_MONTHLY_PRICE=99.00

# Database Provisioning
DEFAULT_DATABASE_SIZE=250MB
MAX_DATABASE_SIZE=50GB
BACKUP_SCHEDULE_TENANT_DBS=0 3 * * *