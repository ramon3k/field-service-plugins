# Field Service Management System - Production Environment Configuration
# IMPORTANT: Customize these settings for your deployment

# =================================================================
# COMPANY INFORMATION
# =================================================================
COMPANY_NAME=Your Company Name
COMPANY_WEBSITE=https://yourcompany.com
SUPPORT_EMAIL=support@yourcompany.com
SUPPORT_PHONE=1-800-XXX-XXXX

# =================================================================
# APPLICATION SETTINGS
# =================================================================
NODE_ENV=production
PORT=5000
FRONTEND_URL=http://localhost:5000

# Application name and version
APP_NAME=Field Service Management System
APP_VERSION=1.0.0

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# SQL Server Express Configuration (Default)
DB_TYPE=sqlserver
DB_SERVER=localhost\\SQLEXPRESS
DB_NAME=FieldServiceDB
DB_USER=
DB_PASSWORD=
DB_TRUST_CERT=true
DB_ENCRYPT=false

# Connection Pool Settings
DB_POOL_MIN=0
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =================================================================
# TENANT REGISTRY DATABASE (Multi-tenant deployments)
# =================================================================
TENANT_DB_SERVER=localhost\\SQLEXPRESS
TENANT_DB_NAME=TenantRegistry
TENANT_DB_USER=
TENANT_DB_PASSWORD=
TENANT_DB_TRUST_CERT=true

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random

# Session Configuration
SESSION_TIMEOUT=3600000
PASSWORD_MIN_LENGTH=8
ENABLE_PASSWORD_COMPLEXITY=true

# Connection String Encryption Secret (CHANGE THIS!)
CONNECTION_STRING_SECRET=your-connection-string-encryption-secret-change-this

# =================================================================
# BACKUP CONFIGURATION
# =================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=C:\\FieldServiceBackups

# Database backup settings
DB_BACKUP_ENABLED=true
DB_BACKUP_COMPRESSION=true

# =================================================================
# LOGGING CONFIGURATION
# =================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Enable different log types
LOG_ACCESS=true
LOG_ERRORS=true
LOG_DATABASE=false
LOG_AUTH=true

# =================================================================
# RATE LIMITING
# =================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW=60000
API_RATE_LIMIT_MAX=1000

# =================================================================
# EMAIL CONFIGURATION (Optional)
# =================================================================
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-app-password

# Email notification settings
EMAIL_FROM_NAME=Field Service System
EMAIL_FROM_ADDRESS=noreply@yourcompany.com

# =================================================================
# EXTERNAL INTEGRATIONS (Optional)
# =================================================================
# Stripe for billing (if enabled)
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SendGrid for email notifications
SENDGRID_ENABLED=false
SENDGRID_API_KEY=your_sendgrid_key_here

# Azure Integration (if using Azure services)
AZURE_ENABLED=false
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# =================================================================
# FEATURE FLAGS
# =================================================================
ENABLE_MULTI_TENANT=false
ENABLE_AZURE_PROVISIONING=false
ENABLE_STRIPE_BILLING=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_MOBILE_APP=false
ENABLE_API_DOCS=true

# =================================================================
# PERFORMANCE SETTINGS
# =================================================================
# Memory and performance limits
NODE_OPTIONS=--max-old-space-size=2048
CACHE_ENABLED=true
CACHE_TTL=300

# File upload limits
MAX_FILE_SIZE=10MB
MAX_FILES_PER_UPLOAD=10

# =================================================================
# MONITORING AND HEALTH CHECKS
# =================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
DATABASE_HEALTH_CHECK_INTERVAL=300000

# Metrics and monitoring
METRICS_ENABLED=false
METRICS_PORT=9090

# =================================================================
# MULTI-TENANT SETTINGS (Advanced)
# =================================================================
MAX_TENANTS_PER_SERVER=100
DEFAULT_SUBSCRIPTION_TIER=Starter
DEFAULT_MAX_USERS=10
DEFAULT_MONTHLY_PRICE=99.00

# Database provisioning for new tenants
DEFAULT_DATABASE_SIZE=250MB
MAX_DATABASE_SIZE=50GB
BACKUP_SCHEDULE_TENANT_DBS=0 3 * * *

# =================================================================
# DEVELOPMENT/DEBUG (Disable in production)
# =================================================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_CORS_ALL=false
DISABLE_AUTH=false

# =================================================================
# PRODUCTION SECURITY HEADERS
# =================================================================
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# =================================================================
# NOTES FOR DEPLOYMENT
# =================================================================
# 1. Change all default passwords and secrets
# 2. Set appropriate database connection settings
# 3. Configure email SMTP if notifications needed
# 4. Enable HTTPS in production
# 5. Set up proper firewall rules
# 6. Configure backup schedule
# 7. Review and enable only needed features
# 8. Set appropriate log levels for production

